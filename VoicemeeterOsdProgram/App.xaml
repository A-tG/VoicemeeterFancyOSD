<Application x:Class="VoicemeeterOsdProgram.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VoicemeeterOsdProgram"
             xmlns:converters="clr-namespace:VoicemeeterOsdProgram.UiControls.Converters"
             Startup="OnAppStartup" ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <converters:RectConverter x:Key="RectConverter"/>
            <converters:RectVertHalfConverter x:Key="RectVertHalfConverter"/>
            <converters:IsGreaterThanConverter x:Key="IsGreaterThanConverter"/>
            <converters:UintToStringConverter x:Key="UintToStrConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Voicemeeter/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Voicemeeter/TabControl.xaml"/>
                <ResourceDictionary Source="Resources/Voicemeeter/TabItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
