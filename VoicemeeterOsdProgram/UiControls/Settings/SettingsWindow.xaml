<Window x:Class="VoicemeeterOsdProgram.UiControls.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoicemeeterOsdProgram.UiControls.Settings"
        mc:Ignorable="d"
        Title="VoicemeeterFancyOSD Settings and Info" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Icon="/Resources/Icons/MainIcon.ico">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Options">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <WrapPanel Orientation="Horizontal" local:PanelMarginSetter.Margin="4">
                        <local:Program/>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="About"></TabItem>
        </TabControl>
    </Grid>
</Window>