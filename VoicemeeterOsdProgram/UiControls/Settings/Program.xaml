<UserControl x:Class="VoicemeeterOsdProgram.UiControls.Settings.Program"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoicemeeterOsdProgram.UiControls.Settings"
             mc:Ignorable="d">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
        <StackPanel Orientation="Vertical" local:PanelMarginSetter.Margin="4">
            <Label Content="Program" FontWeight="Bold" HorizontalAlignment="Center"/>
            <CheckBox Content="Autostart with Windows"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Render Mode" VerticalAlignment="Center"/>
                <ComboBox SelectedIndex="0" Height="Auto" VerticalAlignment="Center">
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Software"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>   
    </Border>
</UserControl>
