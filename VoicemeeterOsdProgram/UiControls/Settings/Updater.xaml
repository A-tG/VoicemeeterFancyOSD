<UserControl x:Class="VoicemeeterOsdProgram.UiControls.Settings.Updater"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoicemeeterOsdProgram.UiControls.Settings"
             xmlns:help="clr-namespace:VoicemeeterOsdProgram.UiControls.Helpers"
             mc:Ignorable="d">
    <StackPanel help:PanelMarginSetter.Margin="4">
        <Label Content="Updater" FontWeight="Bold" HorizontalAlignment="Center"/>
        <CheckBox Content="Check on startup" ToolTip="Check for updates on program startup"
                  IsChecked="{Binding CheckOnStartup, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
